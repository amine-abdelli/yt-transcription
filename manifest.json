{
  "manifest_version": 3,
  "name": "YouTube Transcript Downloader",
  "version": "1.0.0",
  "description": "Download YouTube video transcriptions as text files with optional timestamps",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
